# Copy this file to ".env" on the VPS and fill in real values.
# DO NOT commit your real .env (it contains secrets).

# Server
PORT=8080
HOST=0.0.0.0
LOG_REQUESTS=false

# Marketplace payments
# When true, accepting an offer does NOT automatically reveal contact info.
# After payment (e.g. iyzico), unlock contact by calling: POST /users/:userId/unlocked-offers
REQUIRE_PAYMENT_FOR_CONTACT=true

# Admin (recommended in production)
# Comma/space separated list of admin emails
ADMIN_EMAILS=destek.bitasi@gmail.com
# If set, admin endpoints require: Authorization: Bearer <ADMIN_TOKEN>
ADMIN_TOKEN=change-me

# Password reset link base (where users complete the reset)
# Example: https://www.bitasi.com.tr/
RESET_URL_BASE=https://www.bitasi.com.tr/

# SMTP (cPanel example: mail.bitasi.com.tr)
SMTP_HOST=mail.bitasi.com.tr
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=_mainaccount@bitasi.com.tr
SMTP_PASS=CHANGE_ME
SMTP_FROM="BiTaşı <_mainaccount@bitasi.com.tr>"
